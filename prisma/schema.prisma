// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ResumeSession {
  id             String   @id @default(uuid())
  userId         String?  // Optional for now, can be linked to Auth later
  mode           String   // Creation mode: manual, upload, prompt, linkedin, chatbot
  rawData        Json?    // Original input data (uploaded text, prompt, URL, etc.)
  structuredData Json     // Stores the entire resume JSON
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
